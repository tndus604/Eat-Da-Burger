<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat-Da-Burger</h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>
    
<div class="container">
    <div class="row">
        <div id="burgerList" class="col-sm-12 col-md-6">
            <h2>Burger List</h2>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="burder d-flex justify-content-between">
                {{ burger_name }}<button class="btn-burger btn btn-primary" data-id={{ id }}>Crave it!</button>
            </div>
            {{/unless}}
            {{/each}}        
        </div>

        <div id="consumed" class="col-sm-12 col-md-6">
            <h2>Eaten Burgers</h2>
            {{#each burgers}}
            {{#if devoured}}
            <div class="eaten d-flex justify-content-center">
                    {{ burger_name }}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
    <div class="col-12">
        <form class="create-burger-form">
            <p>It's PARTY TIME!! Add a burger you would like to eat!!</p>
            <div class="input-group">
            <input type="text" id="burger_name" class="form-control form-control-lg">
            <div class="input-group-append">
                <button id="submit" type="submit" class="btn btn-primary">Add Burger</button>
            </div>
            </div>
        </form>
    </div>
    </div>
</div>
