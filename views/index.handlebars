<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat-Da-Burger</h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>
    
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Burger List</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burgers-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Eaten Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container justify-content-center">
    <h2>Add a Burger!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        
        <div class="form-group">
            <label for="devoured">Hungry?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> I'm so full!!
        </div>
        
        <button type="submit">Add Burger</button>
    </form>
</div>