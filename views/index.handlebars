<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat-Da-Burger</h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>
    
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Burger List</h2>
            <ul>
                {{#each burgers}}
                    {{#unless sleepy}}
                        {{> cats/cat-block sleep=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Eaten Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if sleepy}}
                        {{> cats/cat-block sleep=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container justify-content-center">
    <h2>Add a Burger!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Cat Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        
        <div class="form-group">
            <label for="sleepy">Sleepy?</label><br>
            <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
            <input type="radio" name="sleepy" value="0"> Awake
        </div>
        
        <button type="submit">Add Cat</button>
    </form>
</div>