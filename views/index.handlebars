<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat-Da-Burger</h1>
        <h4>Crave your favorite burgers!</h4>
    </div>
</div>
    
<div class="container">
    <div class="row">
        <div id="burgerList" class="col-sm-12 col-md-6">
            <h2 class="text-center">Burger List</h2>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="border d-flex justify-content-between">
                {{ burger_name }}<button class="btn-burger btn btn-warning btn-sm" data-id={{ id }}><i class="fas fa-hamburger"></i> Crave it!</button>
            </div>
            {{/unless}}
            {{/each}}        
        </div>

        <div id="consumed" class="col-sm-12 col-md-6">
            <h2 class="text-center">Eaten Burgers</h2>
            {{#each burgers}}
            {{#if devoured}}
            <div class="border d-flex justify-content-center">
                    {{ burger_name }}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
    <div class="col-12 burgerForm">
        <form class="create-burger-form">
            <p>It's PARTY TIME!! Add a burger you would like to eat!!</p>
            <div class="input-group">
            <input type="text" id="burger_name" class="form-control form-control-lg">
            <div class="input-group-append">
                <button id="submit" type="submit" class="btn btn-warning"><i class="fas fa-shopping-cart"></i> Add New Burger</button>
            </div>
            </div>
        </form>
    </div>
    </div>
</div>
